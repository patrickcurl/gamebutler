<h1>Welcome!</h1>




<%= render "games/modals/new" %>
<div class="tabbable boxed parentTabs">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#games">Games</a></li>
        <% if current_user.admin? %><li><a href="#users">Users</a></li><% end %>
        <li><a href="#profile">Profile</a></li>
        <li><a href="#settings">Settings</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane fade active in" id="games">
            <div class="tabbable">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#mygames">My Games</a></li>
                    <li><a href="#allgames">All Games</a></li>
                    <li><a href="#borrowedgames">Borrowed Games</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade active in" id="mygames">
                        <%= render 'dashboard/games/owned' %>
                    </div>
                    <div class="tab-pane fade" id="allgames">
                        <%= render 'dashboard/games/all' %>
                    </div>
                    <div class="tab-pane fade" id="borrowedgames">
                        <%= render 'dashboard/games/borrowed' %>
                    </div>
                </div>
            </div>
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  New Game
</button>
        </div>
        <div class="tab-pane fade" id="users">
            <%= render 'dashboard/users/all' %>
        </div>
        <div class="tab-pane fade" id="profile">
            Edit own profile here.  
        </div>
        <div class="tab-pane fade" id="settings">
            Edit app settings here.  
        </div>
        
    </div>
</div>

<script>$("ul.nav-tabs a").click(function (e) {
  e.preventDefault();  
    $(this).tab('show');
});
</script>